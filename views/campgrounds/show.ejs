<% layout('layouts/boilerplate') %> 
<div class='row'>
    <div class="col-6 offset-3">
        <div class="card mb-3">
            <img class='card-img-top' src="<%= camp.image %> " alt="">
            <div class="card-body">
                <h5 class="card-title"><%= camp.title %></h5>
                <p class="card-text"><%= camp.description %></p>
            </div>
            <ul class="list-group list-group-flush">
                <li class="list-group-item text-muted"><%= camp.location %></li>
                <li class="list-group-item text-muted">$<%= camp.price.toFixed(2) %>/night</li>
            </ul>
            <div class="card-body">
                <a class="card-link btn btn-info" href="/campgrounds/<%= camp._id %>/edit">Edit details</a>
                <form class="d-inline" action="/campgrounds/<%= camp._id %>?_method=DELETE" method="POST">
                    <button class="btn btn-danger">Delete Campground</button>
                </form>
            </div>
            <div class="card-footer text-muted">
                Some days ago
            </div>
        </div>
        <h2>Leave a Review</h2>
        <form action="" class="mb-3" method="POST">
            <div class="mb-3">
                <label class='form-label' for="rating">Rating</label>
                <input class='form-range' name='review[rating]' type="range" min='0' max='5' id='rating'>
            </div>
            <div class="mb-3">
                <label class='form-label' for="body">Review</label>
                <textarea class='form-control' name="review[body]" id="body" cols="30" rows="3"></textarea>
            </div>
            <div class="btn btn-success">Submit Review</div>
        </form>
    </div>
</div>
